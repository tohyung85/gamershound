<div id="carousel-example-generic" class="carousel slide col-xs-10 col-xs-offset-1" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active">
      <%= image_tag 'slider1.jpg' ,class: "img-responsive"%>
      <div class="carousel-caption">
        Play your favourite games!
      </div>
    </div>
    <div class="item">
      <%= image_tag 'slider2.jpg' ,class: "img-responsive"%>
      <div class="carousel-caption">
        Chill and take a break!
      </div>
    </div>
    <div class="item">
      <%= image_tag 'slider3.jpg' ,class: "img-responsive"%>
      <div class="carousel-caption">
        Meet up and have fun with your friends!
      </div>
    </div>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
  </a>
</div>

<% @places.each do |place| %>
  <div class="booyah-box col-xs-10 col-xs-offset-1">
    <h1><%= link_to place.name, place_path(place) %></h1>
    <br/><br/>
    <% if place.photos.present? %>
      <%= image_tag place.photos.last.picture, class: 'index-picture img-responsive' %>
    <% end %>
    <i class="place-address"><%= place.address %></i>
    <br/><br/>
    <p class="place-description"><%= place.description %></p>    

    <% if place.user.present? %>
      <small><%= place.user.email %></small>
    <% end %>

    <% if place.comments.present? %>
      <div class="index-comment col-xs-12">
        <blockquote>      
          <%= place.comments.last.message %>
          <% if place.comments.last.humanized_rating.present? %>
            <b><%= place.comments.last.humanized_rating %></b>
          <% end %>
          <small><%= place.comments.last.user.email %></small>
        </blockquote>
      </div>
    <% end %>

  </div>
<% end %>

<div class="paginate_links col-xs-10 col-xs-offset-1">
  <%= will_paginate @places %>
</div>