<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1><%= @place.name %></h1>
  <br/><br/>
  <i><%= @place.address %></i>
  <br/><br/>
  <p><%= @place.description %></p>

  <% if user_signed_in? && current_user == @place.user%>
  <div class="pull-right">
    <%= link_to 'Edit Place', edit_place_path, class: 'btn btn-warning' %>
    <%= link_to 'Delete Place', place_path, method: :destroy, data:{confirm: "Are you sure you want to delete this place?"}, class: 'btn btn-danger' %>
  </div>
  <% end %>
</div>